%{
#include <stdio.h>
int ln = 0;
%}
%%
.*{ ln++; printf("%d: %s\n", ln, yytext);}
%%
int yywrap() { return 1;}
int main(){
    yyin = fopen("simple.txt", "r");
    yyout = fopen("out.txt", "w");
    yylex();
    fclose(yyin);
    fclose(yyout);
    return 0;
}

